<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori" />

        <TextView
            android:id="@+id/viewnama_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="das0"
            android:textColor="#333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga Beli" />

        <TextView
            android:id="@+id/viewharga_beli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="das0"
            android:textColor="#333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berat Hewan" />

        <TextView
            android:id="@+id/viewbobot_beli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="das0"
            android:textColor="#333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tinggi Hewan" />

        <TextView
            android:id="@+id/viewtinggi_hewan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="das0"
            android:textColor="#333"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin" />

        <TextView
            android:id="@+id/viewjenis_kelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="das0"
            android:textColor="#333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Pembelian" />

        <TextView
            android:id="@+id/viewtanggal_beli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="das0"
            android:textColor="#333"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/status_jual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Barang" />

        <TextView
            android:id="@+id/viewstatus_jual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="das0"
            android:textColor="#333"
            android:textSize="12dp" />



    </LinearLayout>
</LinearLayout>